generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- Auth.js Models ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Custom fields from Tech Spec
  provider     String? // 'google'
  providerId   String? @map("provider_id") // OAuth Sub ID
  phoneNumber  String? @map("phone_number")
  linkedinUrl  String? @map("linkedin_url")
  portfolioUrl String? @map("portfolio_url")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  subscriptions Subscription[]
  resumes       Resume[]
  usageLogs     UsageLog[]

  @@map("users")
}

model Account {
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

// --- Subscription Models ---

model Plan {
  code          String         @id
  monthlyQuota  Int            @map("monthly_quota")
  maxResumes    Int            @map("max_resumes")
  subscriptions Subscription[]

  @@map("plans")
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
}

model Subscription {
  id                 String             @id @default(cuid())
  userId             String             @map("user_id")
  planCode           String             @map("plan_code")
  status             SubscriptionStatus
  currentPeriodStart DateTime           @map("current_period_start")
  currentPeriodEnd   DateTime           @map("current_period_end")
  cancelAtPeriodEnd  Boolean            @default(false) @map("cancel_at_period_end")
  billingKey         String?            @map("billing_key")

  user User @relation(fields: [userId], references: [id])
  plan Plan @relation(fields: [planCode], references: [code])

  @@map("subscriptions")
}

// --- Resume Models ---

enum ResumeStatus {
  IDLE
  PROCESSING
  COMPLETED
  FAILED
}

enum ResumeStep {
  UPLOAD
  SUMMARY
  TRANSLATE
  DONE
}

enum Template {
  MODERN
  CLASSIC
  MINIMAL
}

model Resume {
  id              String       @id @default(cuid())
  userId          String       @map("user_id")
  title           String       @default("Untitled Resume")
  originalFileUrl String       @map("original_file_url")
  rawText         String?      @db.Text @map("raw_text")
  targetRole      String?      @map("target_role")
  status          ResumeStatus @default(IDLE)
  failureMessage  String?      @map("failure_message")
  currentStep     ResumeStep   @default(UPLOAD)
  isOneClick      Boolean      @default(false) @map("is_one_click")
  selectedTemplate Template    @default(MODERN) @map("selected_template")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user            User             @relation(fields: [userId], references: [id])
  workExperiences WorkExperience[]

  @@map("resumes")
}

model WorkExperience {
  id            String  @id @default(cuid())
  resumeId      String  @map("resume_id")
  companyNameKr String  @map("company_name_kr")
  companyNameEn String? @map("company_name_en")
  roleKr        String  @map("role_kr")
  roleEn        String? @map("role_en")
  startDate     String  @map("start_date")
  endDate       String? @map("end_date")
  bulletsKr     Json    @map("bullets_kr") // JSONB
  bulletsEn     Json?   @map("bullets_en") // JSONB
  order         Int     @default(0)

  resume Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@map("work_experiences")
}

// --- Logs ---

model UsageLog {
  id       String   @id @default(cuid())
  userId   String   @map("user_id")
  resumeId String?  @map("resume_id")
  action   String // SUMMARY, TRANSLATE
  usedAt   DateTime @default(now()) @map("used_at")

  user User? @relation(fields: [userId], references: [id])

  @@map("usage_logs")
}
